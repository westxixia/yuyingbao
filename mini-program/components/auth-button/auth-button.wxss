/* 授权按钮容器 */
.auth-button-container {
  margin: 20rpx 0;
}

.auth-prompt {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FFF8E1 0%, #E8F5E8 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #FFE0B2;
  box-shadow: 0 4rpx 12rpx rgba(255, 183, 77, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.auth-prompt:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 183, 77, 0.2);
}

.auth-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  color: #FF9800;
  text-shadow: 0 1rpx 2rpx rgba(255, 152, 0, 0.3);
}

.auth-content {
  flex: 1;
  margin-right: 16rpx;
}

.auth-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 6rpx;
}

.auth-desc {
  display: block;
  font-size: 24rpx;
  color: #7F8C8D;
  line-height: 1.4;
}

.auth-btn {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  min-width: 120rpx;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.auth-btn::after {
  border: none;
}

.auth-btn:active {
  background: linear-gradient(135deg, #357ABD 0%, #2E5A87 100%);
  transform: scale(0.96);
  box-shadow: 0 1rpx 4rpx rgba(74, 144, 226, 0.4);
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .auth-prompt {
    flex-direction: column;
    text-align: center;
    padding: 32rpx 24rpx;
  }
  
  .auth-icon {
    margin-right: 0;
    margin-bottom: 16rpx;
    font-size: 48rpx;
  }
  
  .auth-content {
    margin-right: 0;
    margin-bottom: 24rpx;
  }
  
  .auth-btn {
    width: 100%;
    padding: 20rpx 32rpx;
  }
}