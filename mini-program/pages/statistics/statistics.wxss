/* 容器样式 */
.container {
  padding: 20rpx;
  background: #F5F7FA;
  min-height: 100vh;
}

/* 时间范围选择器 */
.time-range-selector {
  background: #FFFFFF;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.08);
}

.range-tabs {
  display: flex;
  gap: 12rpx;
  background: #F8F9FA;
  padding: 8rpx;
  border-radius: 16rpx;
}

.range-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  background: transparent;
  border-radius: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.range-tab.active {
  background: #4A90E2;
  color: #FFFFFF;
  transform: scale(1.02);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

/* 时间范围显示 */
.time-range-display {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #E3F2FD, #F3E5F5);
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.range-text {
  font-size: 24rpx;
  color: #5A6C7D;
  line-height: 1.4;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.08);
  border: 1rpx solid rgba(74, 144, 226, 0.05);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F8F9FA;
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2C3E50;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  width: 6rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #4A90E2, #7ED321);
  border-radius: 3rpx;
  margin-right: 12rpx;
}

.card-subtitle {
  font-size: 26rpx;
  color: #7F8C8D;
  font-weight: 500;
  background: #F8F9FA;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx 16rpx;
  background: linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%);
  border-radius: 16rpx;
  border: 2rpx solid #F1F3F5;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #4A90E2, #7ED321);
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.stat-item:hover::before,
.stat-item:active::before {
  transform: translateX(0);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: #7F8C8D;
  font-weight: 500;
  line-height: 1.3;
}

/* 颜色定义 */
.primary-color {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.secondary-color {
  background: linear-gradient(135deg, #7ED321, #68B91A);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.warning-color {
  background: linear-gradient(135deg, #FFB74D, #FF9800);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 图表容器 */
.chart-container {
  margin-top: 32rpx;
  background: #FAFBFC;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid #E9ECEF;
}

.chart-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-bottom: 24rpx;
  text-align: center;
  position: relative;
}

.chart-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #4A90E2, #7ED321);
  border-radius: 2rpx;
}

/* ECharts图表容器 */
.ec-canvas {
  width: 100%;
  height: 400rpx;
}

/* 饼图图表容器 */
#diaper-chart {
  height: 500rpx;
}

/* 喂养类型分布图容器 */
#feeding-type-chart {
  height: 450rpx;
}

/* 成长图表容器 */
#growth-chart {
  height: 500rpx;
}

/* 时间轴图表容器 */
#timeline-chart {
  height: 450rpx;
}

/* 智能分析 */
.analysis-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.analysis-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.analysis-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.analysis-content {
  flex: 1;
}

.analysis-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.analysis-desc {
  display: block;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.analysis-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.analysis-status.good {
  background: #E8F5E8;
  color: #2E7D32;
}

.analysis-status.warning {
  background: #FFF3E0;
  color: #F57C00;
}

.analysis-status.danger {
  background: #FFEBEE;
  color: #D32F2F;
}

/* 响应式设计 - 针对手机优化 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  /* 本月数据显示优化 */
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
    margin-bottom: 24rpx;
  }
  
  .stat-item {
    padding: 20rpx 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
  }
  
  .stat-value {
    font-size: 36rpx;
    margin-bottom: 0;
  }
  
  .stat-label {
    font-size: 26rpx;
  }
  
  /* 时间选择器优化 */
  .range-tabs {
    flex-direction: row;
    gap: 8rpx;
  }
  
  .range-tab {
    padding: 16rpx 12rpx;
    font-size: 26rpx;
  }
  
  /* 图表优化 - 根据时间范围调整 */
  .ec-canvas {
    height: 350rpx;
  }
  
  #diaper-chart {
    height: 400rpx;
  }
  
  #feeding-type-chart {
    height: 380rpx;
  }
  
  #growth-chart {
    height: 400rpx;
  }
  
  #timeline-chart {
    height: 380rpx;
  }
  
  /* 卡片优化 */
  .card {
    padding: 24rpx 20rpx;
    margin-bottom: 20rpx;
  }
  
  .card-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
    margin-bottom: 24rpx;
  }
  
  .card-title {
    font-size: 30rpx;
  }
  
  .card-subtitle {
    font-size: 24rpx;
    align-self: flex-end;
  }
  
  /* 智能分析优化 */
  .analysis-item {
    flex-direction: column;
    align-items: flex-start;
    padding: 24rpx;
  }
  
  .analysis-icon {
    align-self: center;
    margin-bottom: 12rpx;
    font-size: 36rpx;
  }
  
  .analysis-content {
    text-align: center;
    margin-bottom: 16rpx;
  }
  
  .analysis-status {
    align-self: center;
  }
}

/* 超小屏幕优化 */
@media (max-width: 600rpx) {
  .stats-grid {
    gap: 8rpx;
  }
  
  .stat-item {
    padding: 16rpx 20rpx;
  }
  
  .stat-value {
    font-size: 32rpx;
  }
  
  .stat-label {
    font-size: 24rpx;
  }
  
  .ec-canvas {
    height: 300rpx;
  }
  
  #diaper-chart {
    height: 350rpx;
  }
  
  #feeding-type-chart {
    height: 330rpx;
  }
  
  #growth-chart {
    height: 350rpx;
  }
  
  #timeline-chart {
    height: 330rpx;
  }
}

/* 动画效果 */
.chart-container {
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}