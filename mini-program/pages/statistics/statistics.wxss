/* 容器样式 */
.container {
  padding: 20rpx;
  background: #F5F7FA;
  min-height: 100vh;
}

/* 时间范围选择器 */
.time-range-selector {
  background: #FFFFFF;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.08);
}

.range-tabs {
  display: flex;
  gap: 12rpx;
  background: #F8F9FA;
  padding: 8rpx;
  border-radius: 16rpx;
}

.range-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  background: transparent;
  border-radius: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.range-tab.active {
  background: #4A90E2;
  color: #FFFFFF;
  transform: scale(1.02);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

/* 时间范围显示 */
.time-range-display {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #E3F2FD, #F3E5F5);
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.range-text {
  font-size: 24rpx;
  color: #5A6C7D;
  line-height: 1.4;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.08);
  border: 1rpx solid rgba(74, 144, 226, 0.05);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F8F9FA;
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2C3E50;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  width: 6rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #4A90E2, #7ED321);
  border-radius: 3rpx;
  margin-right: 12rpx;
}

.card-subtitle {
  font-size: 26rpx;
  color: #7F8C8D;
  font-weight: 500;
  background: #F8F9FA;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx 16rpx;
  background: linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%);
  border-radius: 16rpx;
  border: 2rpx solid #F1F3F5;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #4A90E2, #7ED321);
  transform: translateX(-100%);
  transition: transform 0.3s ease;
}

.stat-item:hover::before,
.stat-item:active::before {
  transform: translateX(0);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: #7F8C8D;
  font-weight: 500;
  line-height: 1.3;
}

/* 颜色定义 */
.primary-color {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.secondary-color {
  background: linear-gradient(135deg, #7ED321, #68B91A);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.warning-color {
  background: linear-gradient(135deg, #FFB74D, #FF9800);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 图表容器 */
.chart-container {
  margin-top: 32rpx;
  background: #FAFBFC;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid #E9ECEF;
}

.chart-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-bottom: 24rpx;
  text-align: center;
  position: relative;
}

.chart-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #4A90E2, #7ED321);
  border-radius: 2rpx;
}

/* 柱状图优化 */
.chart {
  height: 320rpx;
  position: relative;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
  overflow: hidden;
}

.chart-bars {
  display: flex;
  align-items: end;
  justify-content: space-around;
  height: 100%;
  padding: 20rpx 10rpx;
}

.chart-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  height: 100%;
  position: relative;
  max-width: 60rpx;
  margin: 0 4rpx;
}

.bar {
  width: 32rpx;
  background: linear-gradient(180deg, #4A90E2 0%, #7ED321 100%);
  border-radius: 16rpx 16rpx 4rpx 4rpx;
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.2);
}

.bar:hover {
  transform: scale(1.05);
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
}

.bar-tooltip {
  position: absolute;
  top: -44rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #2C3E50;
  color: #FFFFFF;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  white-space: nowrap;
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 10;
}

.bar-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 4rpx solid transparent;
  border-top-color: #2C3E50;
}

.bar:hover .bar-tooltip {
  opacity: 1;
  transform: translateX(-50%) translateY(-4rpx);
}

.bar-label {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #7F8C8D;
  text-align: center;
  font-weight: 500;
}

/* 饼图优化 */
.pie-chart {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto 32rpx;
  border-radius: 50%;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.pie-segment {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  clip-path: polygon(50% 50%, 50% 0%, 100% 0%, 100% 100%, 50% 100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.pie-segment:hover {
  transform: scale(1.02);
}

.pie-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(74, 144, 226, 0.2);
  border: 3rpx solid #F8F9FA;
}

.pie-total {
  font-size: 26rpx;
  font-weight: 700;
  color: #2C3E50;
}

.pie-legend {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  padding: 20rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #5A6C7D;
  padding: 8rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s ease;
}

.legend-item:hover {
  background-color: #F8F9FA;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.legend-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 成长曲线图 */
.growth-chart {
  height: 300rpx;
  position: relative;
  background: #F8F9FA;
  border-radius: 12rpx;
  overflow: hidden;
}

.chart-line {
  position: relative;
  width: 100%;
  height: 100%;
}

.data-point {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: #4A90E2;
  border-radius: 50%;
  border: 3rpx solid #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  transform: translate(-50%, -50%);
  cursor: pointer;
  transition: all 0.3s ease;
}

.data-point:hover {
  transform: translate(-50%, -50%) scale(1.2);
}

.point-tooltip {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: #333333;
  color: #FFFFFF;
  padding: 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  white-space: nowrap;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 10;
}

.data-point:hover .point-tooltip {
  opacity: 1;
}

.point-tooltip text {
  display: block;
  margin-bottom: 4rpx;
}

.point-tooltip text:last-child {
  margin-bottom: 0;
}

/* 智能分析 */
.analysis-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.analysis-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.analysis-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.analysis-content {
  flex: 1;
}

.analysis-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.analysis-desc {
  display: block;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.analysis-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.analysis-status.good {
  background: #E8F5E8;
  color: #2E7D32;
}

.analysis-status.warning {
  background: #FFF3E0;
  color: #F57C00;
}

.analysis-status.danger {
  background: #FFEBEE;
  color: #D32F2F;
}

/* 响应式设计 - 针对手机优化 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  /* 本月数据显示优化 */
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
    margin-bottom: 24rpx;
  }
  
  .stat-item {
    padding: 20rpx 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
  }
  
  .stat-value {
    font-size: 36rpx;
    margin-bottom: 0;
  }
  
  .stat-label {
    font-size: 26rpx;
  }
  
  /* 时间选择器优化 */
  .range-tabs {
    flex-direction: row;
    gap: 8rpx;
  }
  
  .range-tab {
    padding: 16rpx 12rpx;
    font-size: 26rpx;
  }
  
  /* 图表优化 - 根据时间范围调整 */
  .chart {
    height: 280rpx;
  }
  
  .chart[data-range="quarter"] {
    height: 240rpx; /* 季度数据高度稍小 */
  }
  
  .chart-bars {
    padding: 16rpx 8rpx;
  }
  
  .chart-bar {
    margin: 0 2rpx;
    max-width: 40rpx;
  }
  
  .chart-bar[data-range="quarter"] {
    max-width: 80rpx; /* 季度数据柱子可以宽一些 */
  }
  
  .bar {
    width: 28rpx;
  }
  
  .bar[data-range="quarter"] {
    width: 48rpx; /* 季度数据柱子更宽 */
  }
  
  .bar-label {
    font-size: 20rpx;
    margin-top: 12rpx;
  }
  
  .bar-label[data-range="quarter"] {
    font-size: 22rpx; /* 季度标签稍大 */
  }
  
  /* 饼图优化 */
  .pie-chart {
    width: 200rpx;
    height: 200rpx;
  }
  
  .pie-legend {
    grid-template-columns: 1fr;
    gap: 12rpx;
    padding: 16rpx;
  }
  
  .legend-item {
    padding: 12rpx;
  }
  
  /* 卡片优化 */
  .card {
    padding: 24rpx 20rpx;
    margin-bottom: 20rpx;
  }
  
  .card-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
    margin-bottom: 24rpx;
  }
  
  .card-title {
    font-size: 30rpx;
  }
  
  .card-subtitle {
    font-size: 24rpx;
    align-self: flex-end;
  }
  
  /* 智能分析优化 */
  .analysis-item {
    flex-direction: column;
    align-items: flex-start;
    padding: 24rpx;
  }
  
  .analysis-icon {
    align-self: center;
    margin-bottom: 12rpx;
    font-size: 36rpx;
  }
  
  .analysis-content {
    text-align: center;
    margin-bottom: 16rpx;
  }
  
  .analysis-status {
    align-self: center;
  }
}

/* 超小屏幕优化 */
@media (max-width: 600rpx) {
  .stats-grid {
    gap: 8rpx;
  }
  
  .stat-item {
    padding: 16rpx 20rpx;
  }
  
  .stat-value {
    font-size: 32rpx;
  }
  
  .stat-label {
    font-size: 24rpx;
  }
  
  .chart {
    height: 240rpx;
  }
  
  .bar {
    width: 24rpx;
  }
}

/* 动画效果 */
.chart-bar {
  animation: slideUp 0.6s ease-out;
}

.pie-segment {
  animation: rotateIn 0.8s ease-out;
}

.data-point {
  animation: fadeIn 0.4s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes rotateIn {
  from {
    opacity: 0;
    transform: rotate(-180deg);
  }
  to {
    opacity: 1;
    transform: rotate(0deg);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}
