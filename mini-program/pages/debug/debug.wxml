<view class="container">
  <view class="card">
    <view class="card-header">
      <text class="card-title">🌍 环境信息</text>
    </view>
    
    <view class="info-item">
      <text class="label">环境版本:</text>
      <text class="value">{{envInfo.envVersion}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">App ID:</text>
      <text class="value">{{envInfo.appId}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">API 地址:</text>
      <text class="value api-url">{{apiUrl}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">调试模式:</text>
      <text class="value">{{debugMode ? '开启' : '关闭'}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">日志级别:</text>
      <text class="value">{{envInfo.logLevel}}</text>
    </view>
    
    <button class="btn btn-primary" bindtap="refreshEnvInfo">刷新环境信息</button>
    <button class="btn btn-outline" bindtap="copyApiUrl">复制 API 地址</button>
    <button class="btn btn-primary" bindtap="checkApiConfig">检查 API 配置</button>
  </view>

  <view class="card">
    <view class="card-header">
      <text class="card-title">🔧 接口测试</text>
    </view>
    
    <view class="info-item">
      <text class="label">测试结果:</text>
      <text class="value">{{testResult}}</text>
    </view>
    
    <button class="btn btn-primary" bindtap="testApiConnection">测试 API 连接</button>
    <button class="btn btn-outline" bindtap="testCheckName">测试 check-name</button>
    <button class="btn btn-primary" bindtap="testLogin">测试登录</button>
  </view>

  <view class="card">
    <view class="card-header">
      <text class="card-title">📈 图表测试</text>
    </view>
    
    <view class="info-item">
      <text class="label">状态:</text>
      <text class="value">测试ECharts图表显示功能</text>
    </view>
    
    <view class="chart-test-container" wx:if="{{testChartOption.onInit}}">
      <text class="chart-title">📈 测试图表</text>
      <ec-canvas id="test-chart" canvas-id="test-chart" ec="{{ testChartOption }}"></ec-canvas>
    </view>
    
    <button class="btn btn-primary" bindtap="testEChartsChart">测试图表渲染</button>
    <button class="btn btn-outline" bindtap="clearTestChart">清空图表</button>
  </view>

  <view class="card">
    <view class="card-header">
      <text class="card-title">📱 应用状态</text>
    </view>
    
    <view class="info-item">
      <text class="label">Token:</text>
      <text class="value">{{token}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">用户信息:</text>
      <text class="value">{{userInfo}}</text>
    </view>
    
    <button class="btn btn-primary" bindtap="checkToken">刷新信息</button>
    <button class="btn btn-outline" bindtap="clearStorage">清除存储</button>
  </view>
</view>