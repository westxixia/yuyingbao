/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4A90E2 0%, #7ED321 100%);
  color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
}

/* 用户授权提示 */
.auth-notice {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.auth-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  opacity: 0.9;
}

.auth-content {
  flex: 1;
  margin-right: 16rpx;
}

.auth-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
  color: #FFFFFF;
}

.auth-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.85;
  line-height: 1.4;
  color: #FFFFFF;
}

.auth-notice .btn {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  font-weight: 600;
  min-width: 120rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.auth-notice .btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-role {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.family-info {
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-top: 20rpx;
}

.family-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.member-count {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 家庭管理卡片 */
.family-card {
  margin-bottom: 20rpx;
}

.invite-section {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.invite-code {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.invite-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 16rpx;
}

.invite-value {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #4A90E2;
  font-family: monospace;
}

.invite-actions {
  display: flex;
  gap: 16rpx;
}

.invite-actions .btn {
  flex: 1;
}

.members-section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.members-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.member-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.member-info {
  flex: 1;
}

.member-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 4rpx;
}

.member-role {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

.member-actions {
  margin-left: 16rpx;
}

/* 宝宝信息卡片 */
.baby-card {
  margin-bottom: 20rpx;
}

.baby-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.baby-avatar-section {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.baby-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.baby-details {
  flex: 1;
}

.baby-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.baby-age {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

.baby-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.baby-stats .stat-item {
  text-align: center;
  padding: 16rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.baby-stats .stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.baby-stats .stat-label {
  font-size: 22rpx;
  color: #666666;
}

.empty-baby {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 20rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

/* 设置卡片 */
.settings-card {
  margin-bottom: 20rpx;
}

.settings-list {
  display: flex;
  flex-direction: column;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  transition: all 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #F8F9FA;
}

.setting-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

.setting-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.setting-arrow {
  font-size: 24rpx;
  color: #999999;
}

/* 退出登录 */
.logout-section {
  padding: 20rpx 0;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 20rpx;
}

.gender-option {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background: #F8F9FA;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  transition: all 0.3s ease;
}

.gender-option.active {
  background: #4A90E2;
  color: #FFFFFF;
  border-color: #4A90E2;
}

/* 表单样式 */
.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: bold;
}

.picker {
  padding: 20rpx;
  background: #F8F9FA;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
}

input {
  padding: 20rpx;
  background: #F8F9FA;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.modal-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999999;
  background: #F0F0F0;
  border-radius: 50%;
}

.modal-body {
  padding: 24rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-top: 1rpx solid #E5E5E5;
  gap: 20rpx;
}

.modal-footer .btn {
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .invite-actions {
    flex-direction: column;
  }
  
  .baby-stats {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .gender-selector {
    flex-direction: column;
  }
}

/* 动画效果 */
.user-card {
  animation: slideDown 0.6s ease-out;
}

.member-item {
  animation: slideIn 0.4s ease-out;
}

.setting-item {
  animation: fadeIn 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
